{
  "name": "my-mood",
  "version": "1.2.5",
  "description": "The modly plateform for enterprises",
  "homepage": "https://github.com/theotime2005/my-mood#readme",
  "bugs": {
    "url": "https://github.com/theotime2005/my-mood/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theotime2005/my-mood.git"
  },
  "license": "ISC",
  "author": "theotime2005",
  "type": "module",
  "scripts": {
    "ci:admin": "cd admin && npm ci",
    "ci:api": "cd api && npm ci",
    "ci:my-mood": "cd my-mood && npm ci",
    "ci-all": "npm-run-all --parallel --print-label ci:*",
    "dev:admin": "cd admin && npm run dev",
    "dev:api": "cd api && npm run dev",
    "dev:my-mood": "cd my-mood && npm start",
    "dev-all": "npm-run-all --parallel --print-label dev:*",
    "test:admin": "cd admin && npm test",
    "test:api": "cd api && npm test",
    "test:my-mood": "cd my-mood && npm test",
    "test": "npm-run-all --parallel --print-label test:*",
    "configure": "sh scripts/configure.sh",
    "build-admin": "cd admin && npm run build",
    "start-api": "cd api && npm start",
    "first-deploy": "cd api && npm run first-deploy",
    "post-deploy": "cd api && npm run db:migrate",
    "start": "npm run start-api",
    "build": "npm run build-admin",
    "update-subpackages": "sh scripts/update-versions.sh",
    "release": "echo \"Releases are handled by GitHub Actions (see .github/workflows/release.yml)\""
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
